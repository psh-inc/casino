# Casino Platform Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DB_PASSWORD=your_secure_database_password_here
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/casino_db
SPRING_DATASOURCE_USERNAME=casino_user

# ============================================
# Security & JWT
# ============================================
# IMPORTANT: Must be at least 64 characters for HS512 algorithm
JWT_SECRET=ThisIsATestSecretKeyThatIsAtLeast64CharactersLongForHS512Algorithm_CHANGE_THIS_IN_PRODUCTION
SECURITY_JWT_EXPIRATION=3600000

# ============================================
# Redis Cache
# ============================================
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# ============================================
# Kafka (Optional - for event streaming)
# ============================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SPRING_KAFKA_CONSUMER_GROUP_ID=casino-consumer-group

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Casino Name

# Email Verification Settings
APP_EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24
APP_EMAIL_VERIFICATION_RESEND_COOLDOWN_MINUTES=5
APP_EMAIL_VERIFICATION_MAX_RESEND_PER_DAY=5

# ============================================
# Application Configuration
# ============================================
SPRING_PROFILE=development
SERVER_PORT=8080
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CASINO=DEBUG

# ============================================
# CORS Configuration
# ============================================
APP_CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201

# ============================================
# Docker Compose Variables
# ============================================
COMPOSE_PROJECT_NAME=casino

# ============================================
# CI/CD Secrets (GitHub Actions)
# ============================================
# These should be set in GitHub repository secrets, not in .env

# DOCKER_USERNAME=your_docker_hub_username
# DOCKER_PASSWORD=your_docker_hub_password
